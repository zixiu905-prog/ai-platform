FROM node:20-alpine

WORKDIR /app

# 安装系统依赖
RUN apk add --no-cache \
    postgresql-client \
    redis

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm ci --only=production

# 复制源代码
COPY . .

# 生成Prisma客户端
RUN npx prisma generate

# 创建必要的目录
RUN mkdir -p coverage test-results

# 设置权限
RUN chmod +x scripts/*.js

# 运行测试
CMD ["npm", "run", "test:ci"]
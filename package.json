{
  "name": "aidesign",
  "version": "1.0.0",
  "description": "AiDesign - 基于多端架构的跨平台云端网站+桌面轻量级应用互通项目",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:desk": "cd desk && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:desk": "cd desk && npm run build",
    "start": "cd backend && npm start",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../desk && npm install"
  },
  "keywords": ["ai", "design", "workflow", "automation", "desktop", "cloud"],
  "author": "AiDesign Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}